<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Uncorect course name"></span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Uncorect price"></span>
    </div>

    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required>
        <label for="img">Picture URL</label>
        <span class="helper-text" data-error="Uncorect picture Url"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Add course</button>
</form>