<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Log in</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">

            {{#if loginError}}
            <p class="alert">{{loginError}}</p>
            {{/if}}

            <h1>Enter the store</h1>
            <form action="/auth/login" method="POST" novalidate>
                <div class="input-field">
                    <input name="email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Uncorect email"></span>
                </div>

                <div class="input-field">
                    <input name="password" id="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Uncorect password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <p><a href="/auth/reset">Forgot password?</a></p>

                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">

            {{#if registerError}}
            <p class="alert">{{registerError}}</p>
            {{/if}}

            <h1>Create an account</h1>
            <form action="/auth/register" method="POST" novalidate>
                <div class="input-field">
                    <input name="email" id="r-email" type="email" class="validate" required>
                    <label for="r-email">Email</label>
                    <span class="helper-text" data-error="Uncorect email"></span>
                </div>

                <div class="input-field">
                    <input name="name" id="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Uncorect name"></span>
                </div>

                <div class="input-field">
                    <input name="password" id="r-password" type="password" class="validate" required>
                    <label for="r-password">Password</label>
                    <span class="helper-text" data-error="Uncorect password"></span>
                </div>

                <div class="input-field">
                    <input name="confirm" id="confirm" type="password" class="validate" required>
                    <label for="confirm">Confirm password</label>
                    <span class="helper-text" data-error="Uncorect password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>