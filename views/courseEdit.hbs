<h1>Update {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" value="{{course.title}}" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Uncorect course name"></span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" value="{{course.price}}" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Uncorect price"></span>
    </div>

    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" value="{{course.img}}" required>
        <label for="img">Picture URL</label>
        <span class="helper-text" data-error="Uncorect picture Url"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Update course</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn red">Remove course</button>
</form>